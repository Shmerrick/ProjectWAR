            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="Entry:"/>
            <TextBox x:Name="entryBox" MinWidth="100" Margin="5,5,5,5" 
                     Text="{Binding AbilitySingleModel.Entry, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Name:"/>
            <TextBox x:Name="nameBox" MinWidth="200" Margin="5,5,5,5" 
                     Text="{Binding AbilitySingleModel.Name, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Label Content="Cooldown:"/>
            <TextBox x:Name="cdBox" MinWidth="50" Margin="5,5,5,5" 
                     Text="{Binding AbilitySingleModel.Cooldown, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Apcost:"/>
            <TextBox x:Name="apcostBox" MinWidth="50" Margin="5,5,5,5"
                     Text="{Binding AbilitySingleModel.ApCost, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="specialcost:"/>
            <TextBox x:Name="scostBox" MinWidth="50" Margin="5,5,5,5"
                     Text="{Binding AbilitySingleModel.SpecialCost, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="invokedelay:"/>
            <TextBox x:Name="invokeDelayBox" MinWidth="50" Margin="5,5,5,5"
                     Text="{Binding AbilitySingleModel.InvokeDelay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <Label Content="effectdelay:"/>
            <TextBox x:Name="effectdelayBox" MinWidth="50" Margin="5,5,5,5"
                     Text="{Binding AbilitySingleModel.EffectDelay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="effectId:"/>
            <TextBox x:Name="effectIdCb" Margin="5,5,5,5" MinWidth="100"
                      Text="{Binding AbilitySingleModel.EffectID, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Range:"/>
            <TextBox x:Name="rangeBox" MinWidth="50" Margin="5,5,5,5"
                     Text="{Binding AbilitySingleModel.Range, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Castime:"/>
            <TextBox x:Name="castTimeBox" MinWidth="50" Margin="5,5,5,5"
                     Text="{Binding AbilitySingleModel.CastTime, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Grid.Row="7" Orientation="Horizontal">
            <Label Content="specline:"/>
            <ComboBox x:Name="speclines" Margin="5,5,5,5" ItemsSource="{Binding speclines}"
                      SelectedItem="{Binding AbilitySingleModel.Specline, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="careerline:"/>
            <ComboBox x:Name="careerline" Margin="5,5,5,5" ItemsSource="{Binding careerLines}"
                      SelectedItem="{Binding AbilitySingleModel.CareerLine, Converter={StaticResource CareerLineConverter}, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="abilityType:"/>
            <ComboBox x:Name="abilityTypes" Margin="5,5,5,5" ItemsSource="{Binding abilityTypes}"
                      SelectedItem="{Binding AbilitySingleModel.AbilityType, Converter={StaticResource AbilityTypeConverter}, UpdateSourceTrigger=PropertyChanged}" 
                      SelectedIndex="0"/>
            <Label Content="masteryTree:"/>
            <ComboBox x:Name="masteryTrees" Margin="5,5,5,5" ItemsSource="{Binding masteryTrees}"
                      SelectedItem="{Binding AbilitySingleModel.MasteryTree, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Icon:"/>
            <TextBox x:Name="iconBox" MinWidth="50" Margin="5,5,5,5"
                     Text="{Binding AbilitySingleModel.IconId, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Grid.Row="9" Orientation="Horizontal">
            <Label Content="MinRank:"/>
            <ComboBox x:Name="rankCb" Margin="5,5,5,5" ItemsSource="{StaticResource MinRanks}"
                      SelectedItem="{Binding AbilitySingleModel.MinimumRank, Converter={StaticResource MinRankConverter}, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="MinRenown:"/>
            <ComboBox x:Name="rrCb" Margin="5,5,5,5" ItemsSource="{StaticResource MinRR}"
                      SelectedItem="{Binding AbilitySingleModel.MinimumRenown, Converter={StaticResource MinRRConverter}, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Weapon needed:"/>
            <ComboBox x:Name="wpnCb" Margin="5,5,5,5" ItemsSource="{StaticResource wpNeeded}"
                      SelectedItem="{Binding AbilitySingleModel.WeaponNeeded, Converter={StaticResource WeaponNeededConverter}, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Grid.Row="12" Orientation="Horizontal" Width="Auto">
            <Expander Header="Advanced">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Label Content="Castangle:"/>
                        <TextBox x:Name="caBox" MinWidth="50" Margin="5,5,5,5"
                                 Text="{Binding AbilitySingleModel.CastAngle, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Movecast:"/>
                        <TextBox x:Name="mcBox" MinWidth="50" Margin="5,5,5,5"
                                 Text="{Binding AbilitySingleModel.MoveCast, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="CoolDownEntry:"/>
                        <TextBox x:Name="CoolDownEntryBox" MinWidth="50" Margin="5,5,5,5"
                                 Text="{Binding AbilitySingleModel.CooldownEntry, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Category:"/>
                        <TextBox x:Name="categoryBox" MinWidth="50" Margin="5,5,5,5"
                                 Text="{Binding AbilitySingleModel.Category, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <Label Content="Pointcost:"/>
                        <TextBox x:Name="pcBox" MinWidth="50" Margin="5,5,5,5"
                                 Text="{Binding AbilitySingleModel.PointCost, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Cashcost:"/>
                        <TextBox x:Name="ccBox" MinWidth="50" Margin="5,5,5,5"
                                 Text="{Binding AbilitySingleModel.CashCost, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="Minrange:"/>
                        <TextBox x:Name="mrBox" MinWidth="50" Margin="5,5,5,5"
                                 Text="{Binding AbilitySingleModel.MinRange, UpdateSourceTrigger=PropertyChanged}"/>
                        <Label Content="AIRange:"/>
                        <TextBox x:Name="aiRangeBox" MinWidth="50" Margin="5,5,5,5"
                                 Text="{Binding AbilitySingleModel.AIRange, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </Grid>
            </Expander>
        </StackPanel>
        <Button Grid.Row="15" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Width="50" Height="20" Content="Save" Command="{Binding SaveCommand, Mode=OneWay}"/>
    </Grid>
</Window>
